header {
  position: relative;
}
.margin-t-3 {
  margin-top: 3em;
}

.hero-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  transform: skewY(-8deg);
  transform-origin: 0;
  min-height: 700px;
  z-index: -1;

  
  background: rgba(102,166,255,1);
  background: -moz-linear-gradient(45deg, rgba(102,166,255,1) 0%, rgba(137,246,254,1) 100%);
  background: -webkit-gradient(left bottom, right top, color-stop(0%, rgba(102,166,255,1)), color-stop(100%, rgba(137,246,254,1)));
  background: -webkit-linear-gradient(45deg, rgba(102,166,255,1) 0%, rgba(137,246,254,1) 100%);
  background: -o-linear-gradient(45deg, rgba(102,166,255,1) 0%, rgba(137,246,254,1) 100%);
  background: -ms-linear-gradient(45deg, rgba(102,166,255,1) 0%, rgba(137,246,254,1) 100%);
  background: linear-gradient(45deg, rgba(102,166,255,1) 0%, rgba(137,246,254,1) 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#66a6ff', endColorstr='#89f6fe', GradientType=1 );

}

.hero-bg-not-skewed {
  width: 100%;
  height: 100%;
  top: -100px;
  z-index: -2;
  position: absolute;
  overflow: hidden;
  min-height: 300px;
  transform: skewY(-8deg);
  transform-origin: 0;

  
  
  background: rgba(113,191,255,1);
  background: -moz-linear-gradient(45deg, rgba(113,191,255,1) 0%, rgba(125,217,254,1) 100%);
  background: -webkit-gradient(left bottom, right top, color-stop(0%, rgba(113,191,255,1)), color-stop(100%, rgba(125,217,254,1)));
  background: -webkit-linear-gradient(45deg, rgba(113,191,255,1) 0%, rgba(125,217,254,1) 100%);
  background: -o-linear-gradient(45deg, rgba(113,191,255,1) 0%, rgba(125,217,254,1) 100%);
  background: -ms-linear-gradient(45deg, rgba(113,191,255,1) 0%, rgba(125,217,254,1) 100%);
  background: linear-gradient(45deg, rgba(113,191,255,1) 0%, rgba(125,217,254,1) 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#71bfff', endColorstr='#7dd9fe', GradientType=1 );


}

