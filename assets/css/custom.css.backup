.hero-bg :nth-child(1) {
  width: 33.33%;
  top: 0;
  left: 0;
  height: 200px;
  background-color: #53f;
  position: absolute;
}

.hero-bg :nth-child(2) {
  width: 33.33%;
  top: -15px;
  right: -50px;
  height: 200px;
  background-color: #53f;
  position: absolute;
}

.hero-bg :nth-child(3) {
  width: 33.33%;
  bottom: 0;
  right: 0;
  height: 200px;
  background-color: #53f;
  position: absolute;
}

.ui.menu {
